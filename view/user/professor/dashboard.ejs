<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professor Review Dashboard</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/professorcss/dashboard.css">
</head>

<body>
    <div class="dashboard-container">

        <div class="dashboard-header">
            <div class="header-top">
                <h1>Professor Review Dashboard</h1>
                <div class="user-profile">
                    <div class="user-info" id="userProfileBtn">
                        <div style="text-align: right;">
                            <div class="user-name">Dr. <%= name %></div>
                            <div class="user-role">PROFESSOR</div>
                        </div>
                        <div class="user-avatar">
                            <img src="<%= profilePic %>" alt="Professor's Profile Picture">
                        </div>
                    </div>
                    <div class="dropdown-menu" id="dropdownMenu">
                        <a href="/professor/settings?name=<%= name %>" class="dropdown-item">
                            <i class="fa-solid fa-gear"></i> Settings
                        </a>
                        <a href="/auth/logout" class="dropdown-item logout-item">
                            <i class="fa-solid fa-power-off"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="metrics-grid">
            <div class="metric-card pending">
                <div class="count">0</div>
                <div class="label">Pending Reviews</div>
            </div>

            <div class="metric-card submitted">
                <div class="count">0</div>
                <div class="label">Total Submitted</div>
            </div>

            <div class="metric-card approved">
                <div class="count">0</div>
                <div class="label">Already Approved</div>
            </div>
        </div>

        <div class="recent-section">

            <div class="recent-section-header">
                <h2>Assignments Awaiting Review</h2>
                <a href="/professor/assignment/all" class="view-all-link">View All â†’</a>
            </div>

            <form action="/professor/filterAssignment" method="post">
                <div class="filter-controls">
                    <div class="filter-group">
                        <label for="statusFilter">Filter by Status:</label>
                        <select name="status" id="statusFilter">
                            <option value="all">All Assignments</option>
                            <option value="pending">Pending Review</option>
                            <option value="approved">Approved</option>
                            <option value="rejected">Rejected</option>
                        </select>
                    </div>
                    <button type="submit" class="apply-btn">Apply</button>
                </div>
            </form>

            <table class="submission-table" id="assignmentTable">
                <thead>
                    <tr>
                        <th>Assignment Title</th>
                        <th>Student Name</th>
                        <th>Status</th>
                        <th>Submitted On</th>
                        <th>Review Actions</th>
                    </tr>
                </thead>

                <tbody>

                    <% if (assignment.length === 0) { %>

                    <tr>
                        <td colspan="5" class="no-data">No Assignments Found</td>
                    </tr>

                    <% } else { %>

                    <% assignment.forEach(a => { %>

                    <tr>
                        <td data-label="Title"><%= a.title %></td>

                        <td data-label="Student"><%= a.student_name %></td>

                        <td data-label="Status">
                            <span class="status-badge badge-<%= a.status %>">
                                <%= a.status %>
                            </span>
                        </td>

                        <td data-label="Submitted"><%= a.submit %></td>

                        <td data-label="Review Actions" class="action-buttons-cell">
                            <% if (a.status === "approved") { %>
                            <a href="/professor/forward/<%= a._id %>" class="review-btn forward-btn">Forward</a>
                            <% } else { %>
                            <a href="/professor/review/<%= a._id %>" class="review-btn">Review</a>
                            <% } %>
                        </td>
                    </tr>

                    <% }) %>

                    <% } %>

                </tbody>
            </table>

        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Dropdown menu functionality
            const userProfileBtn = document.getElementById('userProfileBtn');
            const dropdownMenu = document.getElementById('dropdownMenu');

            userProfileBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                dropdownMenu.classList.toggle('show');
            });

            // Close dropdown when clicking outside
            document.addEventListener('click', (e) => {
                if (!userProfileBtn.contains(e.target)) {
                    dropdownMenu.classList.remove('show');
                }
            });
        });
    </script>

</body>

</html>