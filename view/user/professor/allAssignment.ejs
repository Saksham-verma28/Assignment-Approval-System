<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assignment List</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="/css/professorcss/allAssignment.css">
</head>
<body>

<div class="dashboard-container">

    <div class="header-row">
        <a href="/professor/dashboard" class="back-icon-btn">
            <i class="fa-solid fa-arrow-left"></i>
        </a>

        <h1 class="page-title">Assignment<br>List</h1>
    </div>

    <form action="/professor/allfilterAssignment" method="POST" class="filter-controls">
        <div class="filter-group">
            <label>Status:</label>
            <select name="status">
                <option value="all">All</option>
                <option value="pending">Pending</option>
                <option value="submitted">Submitted</option>
                <option value="approved">Approved</option>
                <option value="rejected">Rejected</option>
            </select>
        </div>

        <button type="submit" class="apply-btn">Apply</button>
    </form>

    <table class="submission-table">
        <thead>
            <tr>
                <th>Student</th>
                <th>Title</th>
                <th>Status</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            <% if (assignment && assignment.length > 0) { %>
                <% assignment.forEach(a => { %>
                    <tr>

                        <td data-label="Student"><%= a.student_name %></td>

                        <td data-label="Title"><%= a.title %></td>

                        <td data-label="Status">
                            <span class="status-badge badge-<%= a.status %>">
                                <%= a.status %>
                            </span>
                        </td>

                        <td data-label="Date"><%= a.submit %></td>

                        <td data-label="Action" class="action-buttons-cell">

                            <% if (a.status === "submitted") { %>
                                <a href="/professor/review/<%= a._id %>" class="review-btn">Review</a>
                            <% } %>

                            <% if (a.status === "approved") { %>
                                <a href="/forward/<%= a._id %>" class="review-btn forward-btn">Forward</a>
                            <% } %>

                        </td>

                    </tr>
                <% }) %>
            <% } else { %>

                <tr>
                    <td colspan="5" style="text-align:center; padding:30px;">
                        <i class="fa-solid fa-folder-open"></i> No assignments found
                    </td>
                </tr>

            <% } %>
        </tbody>
    </table>

</div>

</body>
</html>
